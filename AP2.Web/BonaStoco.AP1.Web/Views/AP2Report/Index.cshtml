    int currentMonth = DateTime.Now.Month;
    int y = 1;
    string t;
    foreach (var item in month)
        {
            if (y == currentMonth)
            {
                t = "selected";
            }
            else
            {
                t = "";
            }
            <option value=@y @t>@item</option>
            y++;
        }
    }
       </select>
      </td>
      <td width="1%">&nbsp;</td>
      <td>&nbsp;</td>
    </tr>
