@{
    ViewBag.Title = "Comodity";
}

<h2>Commodity</h2>

@section styles
{
    <link href="@Url.Content("~/Content/ListMenuUnit.css")" rel="stylesheet" type="text/css" />
}

@section scripts
{
     @Content.Script("Comodity.js", @Url)
}
<fieldset>
    <legend style="font-size=16px">Commodity List</legend>
    <button id="tambah" class="add button"><img src="@Url.Content("~/Content/images/button/add.png")"/> Add Commodity</button><br /><br />
    <div>
        <table id = "ListMenu" width="50%">
            <thead>
                <tr class = "headerList">
                    <th width ="11">Commodity Code</th>
                    <th class="right" width ="12">Commodity Name</th>
                    <th width ="6">&nbsp;</th>
                </tr>
            </thead>
            <tbody id="bodyList">
            </tbody>
        </table>
    </div>
</fieldset>
        
<div id="edit-dialog" title="Update Commodity">
    <p class="validateTips"></p>
    <table width="100%" border="0">
      <tr id="headerTable">
        <td width="37%" class="left">Commodity Code</td>
        <td width="63%" class="left">
            <input type="text" id="kode"/>
            <input type="hidden" id="guid" />
        </td>
      </tr>
      <tr>
        <td>Commodity Name</td>
        <td>
            <input type="text" id="nama" />
        </td>
      </tr>
    </table>
</div>

<div id="add-dialog" title="Add Commodity">
    <p class="validateTips"></p>
    <table width="100%" border="0">
      <tr id="headerTable">
        <td width="37%" class="left">Commodity Code</td>
        <td width="63%" class="left">
            <input type="text" id="add_kode"/>
        </td>
      </tr>
      <tr>
        <td>Commodity Name</td>
        <td>
            <input type="text" id="add_nama" />
        </td>
      </tr>
    </table>
</div>

<div id="dialog-overlay">
		<div id="dialog-loader">
			<img src="@Url.Content("~/Content/images/loader-new.gif")"/>
        </div>
</div>