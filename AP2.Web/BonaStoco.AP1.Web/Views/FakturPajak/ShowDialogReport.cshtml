        <thead>
            <tr >
                <th>Kode</th>
                <th>Nama</th>
                <th>Alamat</th>
            </tr>
        </thead>
        <tbody>
    	    <tr id="noresults">
		        <td colspan="6">No Results</td>
	        </tr>
            @foreach (var tenan in @ViewBag.Tenants)
            {
