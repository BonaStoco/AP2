<div id="AdvancedSearch" title="Advanced Search" style="display:none;">
        <br />
	    <input type="text" name="search" value="" id="id_search" placeholder="Search"/> 
        <img class="loading" src="@Url.Content("~/Content/images/loader.gif")"/>
