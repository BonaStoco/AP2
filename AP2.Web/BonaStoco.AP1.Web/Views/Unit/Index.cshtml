@model IList<BonaStoco.AP1.MasterData.Models.Unit>
           
@{
    ViewBag.Title = "List Unit";
}

@section styles
{
    <link href="@Url.Content("~/Content/ListMenuUnit.css")" rel="stylesheet" type="text/css" />
}

@section scripts
{
     @Content.Script("ListUnit.js", @Url)
}
    <h2>Tambah Unit</h2>
    <button id="tambah" class="add button"><img src="@Url.Content("~/Content/images/button/add.png")"/> Tambah Unit</button><br /><br />
    <div>
        <table id = "ListMenu" width="30%">
            <thead>
                <tr class = "headerList">
                    <th width ="11">Kode Unit</th>
                    <th class="right" width ="12">Nama Unit</th>
                    <th width ="6">&nbsp;</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
        
<div id="edit-dialog" title="Ubah Unit Produk">
    <p class="validateTips"></p>
    <table width="100%" border="0">
      <tr id="headerTable">
        <td width="37%" class="left">Kode Unit</td>
        <td width="63%" class="left">
            <input type="text" id="kode"/>
            <input type="hidden" id="unitId" />
        </td>
      </tr>
      <tr>
        <td>Nama Unit</td>
        <td>
            <input type="text" id="nama" />
        </td>
      </tr>
    </table>
</div>

<div id="add-dialog" title="Tambah Unit Produk">
    <p class="validateTips"></p>
    <table width="100%" border="0">
      <tr id="headerTable">
        <td width="37%" class="left">Kode Unit</td>
        <td width="63%" class="left">
            <input type="text" id="add_kode"/>
        </td>
      </tr>
      <tr>
        <td>Nama Unit</td>
        <td>
            <input type="text" id="add_nama" />
        </td>
      </tr>
    </table>
</div>

<div id="dialog-overlay">
		<div id="dialog-loader">
			<img src="@Url.Content("~/Content/images/loader-new.gif")"/>
        </div>
</div>