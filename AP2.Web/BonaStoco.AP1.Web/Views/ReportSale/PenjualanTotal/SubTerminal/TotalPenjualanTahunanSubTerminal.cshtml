@model List<BonaStoco.AP1.Web.Report.SubTerminalYearlySales>
@{
    DateTime today = DateTime.Today;
}
@section styles{
    <link href="@Url.Content("~/Content/LaporanPenjualanByTenant.css")" rel="stylesheet" type="text/css" />
}
<table width="95%" height="65%" border="0" align="right" cellpadding="0" cellspacing="0">
    <tr>
        <td width="128px" height="39">
            <div id="Periode">
            @Html.ActionLink("Hari", "PageHari", "SubTerminalReportSale", new { locationId = ViewBag.LocationId, subTerminalId = ViewBag.TerminalId, ViewBag.SubTerminalName },null)
            </div>
        </td>
        <td width="128px">
            <div id="Periode">
            @Html.ActionLink("Bulan", "PageBulan", "SubTerminalReportSale", new { locationId = ViewBag.LocationId, subTerminalId = ViewBag.TerminalId, ViewBag.SubTerminalName },null)
            </div>
        </td>
        <td width="128px">
            <div class="ActivePeriode">Tahun
            </div>
        </td >
        <td width="100%">
            <div class="NamaBandara">@ViewBag.SubTerminalName</div>
        </td>
    </tr>
    <tr>
    <td height="494" colspan="4" align="right" class="top" id="results">
            <table width="100%" height="100%" border="0" align="right" cellpadding="0" cellspacing="0">
					    <tr>
					    <td height="39" class="left" id="HeaderjumlahTransaksi">Total penjualan @ViewBag.Waktu, @today.Date.ToString("yyyy") di @ViewBag.SubTerminalName</td>
					    </tr>
					    <tr>
					    <td height="21" class="center" id="IsijumlahTransaksi">Rp. @ViewBag.TotalSalePerYear</td>
					    </tr>
					    <tr>
					    <td class="top"><br />
						    <table width="100%" border="0" cellpadding="0" cellspacing="0" bordercolor="#FFFFFF">
							    <tr >
							    <td width="50%"  class="left" id="HeaderjumlahTransaksi">Sub Terminal</td>
							    <td width="50%" class="right" id="HeaderjumlahTransaksi">Jumlah Penjualan</td>
							    </tr>
                                @foreach (var item in Model)
                                {
							        <tr>
								    <td class="left" id="BodyLeftjumlahTransaksi">@item.SubTerminalName</td>
								    <td class="right" id="BodyRightjumlahTransaksi">Rp. @item.TotalSaleperCompany.ToString("N")</td>
							        </tr>
                                }
						    </table>
					    </td>
          			    </tr>
            </table>
    </td>
    </tr>
</table>
