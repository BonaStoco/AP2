@model List<BonaStoco.AP1.Web.Report.TerminalYearlySales>
@{
    DateTime today = DateTime.Today;
}
<table width="95%" height="65%" class="tableLaporanPenjualan">
    <tr>
        <td width="128px" height="39">
            <div id="Periode">
            @Ajax.ActionLink("Hari", "PageHari", "BandaraReportSale", new { locationId = ViewBag.LocationId, terminalId = ViewBag.TerminalId, ViewBag.TerminalName },
                    new AjaxOptions
                    {
                        HttpMethod = "GET",
                        InsertionMode = InsertionMode.Replace,
                        UpdateTargetId = "results",
                        LoadingElementId = "dialog-overlay"
                    })
            </div>
        </td>
        <td width="128px">
            <div id="Periode">
            @Ajax.ActionLink("Bulan", "PageBulan", "BandaraReportSale", new { locationId = ViewBag.LocationId, terminalId = ViewBag.TerminalId, ViewBag.TerminalName },
                    new AjaxOptions
                    {
                        HttpMethod = "GET",
                        InsertionMode = InsertionMode.Replace,
                        UpdateTargetId = "results",
                        LoadingElementId = "dialog-overlay"
                    })
            </div>
        </td>
        <td width="128px">
            <div class="ActivePeriode">Tahun
            </div>
        </td >
        <td width="100%">
            <div class="NamaBandara">@ViewBag.TerminalName</div>
        </td>
    </tr>
    <tr>
    <td height="494" colspan="4" align="right" class="top" id="results">
            <table width="100%" height="100%" class="isiLaporanPenjualan">
					    <tr>
					    <td height="39" class="left" id="HeaderjumlahTransaksi">Total penjualan @ViewBag.Waktu, @today.Date.ToString("yyyy") di @ViewBag.TerminalName</td>
					    </tr>
					    <tr>
					    <td height="21" class="center" id="IsijumlahTransaksi">Rp. @ViewBag.TotalSalePerYear</td>
					    </tr>
					    <tr>
					    <td class="top"><br />
						    <table width="100%" border="0" cellpadding="0" cellspacing="0" bordercolor="#FFFFFF">
							    <tr >
							    <td width="50%"  class="left" id="HeaderjumlahTransaksi">Terminal</td>
							    <td width="50%" class="right" id="HeaderjumlahTransaksi">Jumlah Penjualan</td>
							    </tr>
                                @foreach (var item in Model)
                                {
							        <tr>
								    <td class="left" id="BodyLeftjumlahTransaksi">@item.TerminalName</td>
								    <td class="right" id="BodyRightjumlahTransaksi">Rp. @item.TotalSaleperCompany.ToString("N")</td>
							        </tr>
                                }
						    </table>
					    </td>
          			    </tr>
            </table>
    </td>
    </tr>
</table>
