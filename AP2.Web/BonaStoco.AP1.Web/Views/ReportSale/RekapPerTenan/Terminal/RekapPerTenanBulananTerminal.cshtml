@model List<BonaStoco.AP1.Web.Report.TenantSubterminalMonthlySales>
@{
    DateTime today = DateTime.Today;
}
<table width="95%" height="65%" border="0" align="right" cellpadding="0" cellspacing="0">
    <tr>
        <td width="128px" height="39">
            <div id="Periode">
            @Ajax.ActionLink("Hari", "RekapTenanHarian", "TerminalReportSale", new { locationId = ViewBag.LocationId, subTerminalId = ViewBag.TerminalId, subTerminalName = ViewBag.SubTerminalName },
                    new AjaxOptions
                    {
                        HttpMethod = "GET",
                        InsertionMode = InsertionMode.Replace,
                        UpdateTargetId = "results",
                        LoadingElementId = "dialog-overlay"
                    })
            </div>
        </td>
        <td width="128px">
            <div class="ActivePeriode">Bulan
            </div>
        </td>
        <td width="128px">
            <div id="Periode">
            @Ajax.ActionLink("Tahun", "RekapTenanTahunan", "TerminalReportSale", new { locationId = ViewBag.LocationId, subTerminalId = ViewBag.TerminalId, subTerminalName = ViewBag.SubTerminalName },
                    new AjaxOptions
                    {
                        HttpMethod = "GET",
                        InsertionMode = InsertionMode.Replace,
                        UpdateTargetId = "results",
                        LoadingElementId = "dialog-overlay"
                    })
            </div>
        </td >
        <td width="100%">
            <div class="NamaBandara">@ViewBag.SubTerminalName</div>
        </td>
    </tr>
    <tr>
    <td height="494" colspan="4" align="right" class="top" id="results">
            <table width="100%" height="100%" border="0" align="right" cellpadding="0" cellspacing="0">
					    <tr>
					    <td height="39" class="left" id="HeaderjumlahTransaksi">Total penjualan @ViewBag.Waktu, @today.Date.ToString("MMMM yyyy") di @ViewBag.SubTerminalName</td>
					    </tr>
					    <tr>
					    <td height="21" class="center" id="IsijumlahTransaksi">Rp. @ViewBag.TotalSalePerMonth</td>
					    </tr>
					    <tr>
					    <td class="top"><br />
						    <table width="100%" border="0" cellpadding="0" cellspacing="0" bordercolor="#FFFFFF">
                                <tr>
                                    <td  colspan="2" id="HeaderjumlahTransaksi">
                                        Detail Penjualan di @ViewBag.SubTerminalName @ViewBag.Waktu, @today.Date.ToString("MMMM yyyy")
                                    </td>
                                </tr>
							    <tr >
							        <td width="50%"  class="left" id="BodyLeftjumlahTransaksi">Tenant</td>
							        <td width="50%" class="right" id="BodyRightjumlahTransaksi">Jumlah Penjualan</td>
							    </tr>
                                @foreach (var item in Model)
                                {
							        <tr>
								    <td class="left" id="BodyLeftjumlahTransaksi">@item.TenanName</td>
								    <td class="right" id="BodyRightjumlahTransaksi">Rp. @item.MonthlyTotalSalePerTenan.ToString("N")</td>
							        </tr>
                                }
						    </table>
					    </td>
          			    </tr>
            </table>
    </td>
    </tr>
</table>
