@model BonaStoco.AP1.Web.Models.GRNItemModel
@if (Model != null)
{
        <td class="center">@Model.Barcode</td>
        <td class="center">@Model.NamaBarang</td>
        <td class="left">@Model.Qty</td>
        <td class="right">@Model.Unit</td>
        <td class="left">@Model.Harga.ToString("N0")</td>
        <td class="left">@Model.Jumlah.ToString("N0")</td>
        <td class="left">@Ajax.ActionLink(
            "Edit", "Edit", new { id = Model.Id },
            new AjaxOptions()
            {
                HttpMethod = "GET",
                InsertionMode = InsertionMode.Replace,
                UpdateTargetId = "grnitem-" + Model.Id
            })
            @Ajax.ActionLink(
                  "Hapus", "DeleteItem", new { id = Model.Id },
                        new AjaxOptions()
                        {
                            HttpMethod = "POST",
                            InsertionMode = InsertionMode.Replace,
                            UpdateTargetId = "grnitem-" + Model.Id
                        })
        </td>
}
else
{
    <script type="text/javascript">
        alert("Barang yang anda cari tidak ditemukan.");
    </script>
}